<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="RoundGauge">
        <!-- this attribute sets the fill color of the gauge's background -->
        <attr name="gaugeBackgroundColor" format="color" />
        <!-- this attribute sets the thickness of the gauge's main component -->
        <attr name="gaugeBackgroundStroke" format="float" />
        <!-- this attribute sets the fill color of gauge's progress bar -->
        <attr name="gaugeProgressBarColor" format="color" />
        <!-- this attribute sets the thickness gauge's progress bar -->
        <attr name="gaugeProgressBarStroke" format="float" />
        <!-- this attribute sets the acceleration of progress -->
        <attr name="gaugeProgressAcceleration" format="float" />
        <!-- this attribute sets the Duration time of one progress -->
        <attr name="gaugeProgressDuration" format="integer" />
        <!-- this boolean attribute enables the Acceleration of progress  -->
        <attr name="gaugeProgressBarConstantAcceleration" format="boolean" />
        <!-- this attribute sets the number of markers in gauge -->
        <attr name="gaugeNumberOfMarkers" format="integer" />
        <!-- this attribute sets the thickness of markers -->
        <attr name="gaugeMarkersStroke" format="float" />
        <!-- this attribute sets the length of markers -->
        <attr name="gaugeMarkersLength" format="integer" />
        <!-- this attribute sets the color of markers -->
        <attr name="gaugeMarkersColor" format="color" />
        <!-- this attribute sets the color of handler circle -->
        <attr name="gaugeHandlerCircleColor" format="color" />
        <!-- this attribute sets the color of inner handler circle -->
        <attr name="gaugeInnerHandlerCirclesColor" format="color" />
        <!-- this attribute sets the radius of handler circle -->
        <attr name="gaugeHandlerCircleRadius" format="float" />
        <!-- this attribute sets the radius of inner handler circle -->
        <attr name="gaugeInnerHandlerCircleRadius" format="float" />
    </declare-styleable>

</resources>